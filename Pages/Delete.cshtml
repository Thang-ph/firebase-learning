@page
@model Firebase.DeleteModel
@{
    ViewData["Title"] = "Delete Shoe";
}

<h2>Delete Shoe</h2>

<p>Are you sure you want to delete the shoe with ID: @Model.id?</p>

<form method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <button type="submit">Confirm Delete</button>
    <a asp-page="Index">Cancel</a>
</form>
